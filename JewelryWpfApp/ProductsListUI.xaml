<Page x:Class="JewelryWpfApp.ProductsListUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JewelryWpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsListUI">

    <Grid x:Name="grProductList" Background="White">
        <Label x:Name="lblHeader" Content="_____Products List____" HorizontalAlignment="Left" Margin="20,19,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Height="42" Width="740"/>
        <DataGrid x:Name="grdProductsList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="20,129,30,30" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="660,66,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="33" Width="100" RenderTransformOrigin="0.5,0.5" Click="btnSearch_Click"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="45,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="580" Height="30" RenderTransformOrigin="0.5,1.7"/>

    </Grid>
</Page>
